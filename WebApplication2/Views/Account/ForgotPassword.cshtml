@model WebApplication2.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
}

<main aria-labelledby="title" class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">

                    <h2 id="title" class="fw-bold text-center mb-3">Forgot Your Password?</h2>
                    <p class="text-muted text-center mb-4">
                        Don’t worry — it happens! Enter your registered email address below and we’ll send you a reset link.
                    </p>

                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg rounded-pill", placeholder = "Enter your email" })
                        </div>

                        <div class="d-grid">
                            <input type="submit" class="btn btn-dark btn-lg rounded-pill" value="📩 Send Reset Link" />
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("Login", "Account")" class="text-decoration-none">
                    ⬅️ Back to Login
                </a>
            </div>

        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
