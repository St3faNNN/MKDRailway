@{
    ViewBag.Title = "Password Reset Email Sent";
}

<main aria-labelledby="title" class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4 text-center">
                <div class="card-body p-5">

                    <h1 id="title" class="fw-bold mb-3">Check Your Email</h1>
                    <p class="text-muted mb-4">
                        We’ve sent you a link to reset your password.
                        Please check your inbox (and your spam folder, just in case).
                    </p>

                    <div class="alert alert-info rounded-pill">
                        Didn’t get the email?
                        <a href="@Url.Action("ForgotPassword", "Account")" class="fw-bold text-decoration-none">
                            Try again
                        </a>
                    </div>

                    <a href="@Url.Action("Login", "Account")" class="btn btn-dark btn-lg rounded-pill mt-3">
                        Back to Login
                    </a>
                </div>
            </div>

        </div>
    </div>
</main>
