@model WebApplication2.Models.Train

@{
    ViewBag.Title = "Delete Train";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Confirmation</h2>
    <p class="lead">Are you sure you want to delete this train record?</p>
    <hr />

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title">Train Details</h4>
            <dl class="row mt-3">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LineNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LineNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StationName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StationName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DepartureTime)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DepartureTime)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ArrivalTime)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ArrivalTime)</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="d-flex gap-2">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
