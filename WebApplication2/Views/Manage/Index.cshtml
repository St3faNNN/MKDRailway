@model WebApplication2.Models.IndexViewModel
@{
    ViewBag.Title = "Manage Account";
}

<main aria-labelledby="title" class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">

                    <h2 id="title" class="fw-bold text-center mb-4">Manage Your Account</h2>

                    @if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
                    {
                        <div class="alert alert-success text-center rounded-pill">
                            @ViewBag.StatusMessage
                        </div>
                    }

                    <p class="text-muted text-center mb-5">
                        Update your account settings and security preferences below.
                    </p>

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">Password</dt>
                        <dd class="col-sm-8">
                            @if (Model.HasPassword)
                            {
                                @Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "btn btn-outline-dark btn-sm rounded-pill" })
                            }
                            else
                            {
                                @Html.ActionLink("Create password", "SetPassword", null, new { @class = "btn btn-success btn-sm rounded-pill" })
                            }
                        </dd>

                        <dt class="col-sm-4 fw-semibold">External Logins</dt>
                        <dd class="col-sm-8">
                            You have <strong>@Model.Logins.Count</strong> linked login(s).
                            @Html.ActionLink("Manage", "ManageLogins", null, new { @class = "btn btn-outline-dark btn-sm rounded-pill ms-2" })
                        </dd>

                        <dt class="col-sm-4 fw-semibold">Two-Factor Authentication</dt>
                        <dd class="col-sm-8">
                            <span class="text-muted">
                                Two-factor authentication is not enabled yet.
                                <a href="https://go.microsoft.com/fwlink/?LinkId=403804" target="_blank">Learn more</a>
                            </span>
                        </dd>
                    </dl>

                </div>
            </div>

        </div>
    </div>
</main>
